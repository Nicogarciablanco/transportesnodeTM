<div class="container">
    <div class="row">
        <div class="col">
            <p class="text-end">Hola {{usuario}}! <a class="btn btn-danger"> Cerrar sesion <i
                        class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div style="margin-bottom: 10px;" class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fas fa-plus"></i> Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end"><a href="" class="btn btn-secondary"> <i class="fas fa-edit"></i> Modificar </a>
                            <a href="" class="btn btn-secondary"> <i class="fas fa-trash"></i> Borrar </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>